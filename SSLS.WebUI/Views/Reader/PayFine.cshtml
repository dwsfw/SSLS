@model SSLS.Domain.Concrete.Fine
@{
    ViewBag.Title = "PayFine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>罚款缴纳</h2>
<div>
    <div class="well">
        <h3>@Model.Borrow.Book.Name</h3><span class="pull-right label label-primary">￥@Model.Borrow.Book.Price</span>
        <h5>作者：@Model.Borrow.Book.Authors</h5>
        <img src="~/Images/@Model.Borrow.Book.ImageUrl" alt="@Model.Borrow.Book.Id 产品图片" width="100" />
        @using (Html.BeginForm())
        {
            <div class="pull-right">
                @Html.Hidden("id", Model.Id)
                <input type="submit" value="确认缴纳" class="btn btn-success cc" />
            </div>
        }
        <div>
            <p>借阅时间：<span>@Model.Borrow.BorrowTime</span></p>
            <p>应该归还时间：<span>@Model.Borrow.NeedReturnTime</span></p>
            <p>归还时间：<span>@Model.Borrow.ReturnTime</span></p>
            <p>应缴罚款金额：￥<span>@Model.FineMoney</span></p>
        </div>
    </div>
</div>



