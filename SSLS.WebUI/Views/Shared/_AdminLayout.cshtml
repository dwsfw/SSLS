<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="../assets/vendors/iconfonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../assets/vendors/iconfonts/ionicons/css/ionicons.css">
    <link rel="stylesheet" href="../assets/vendors/iconfonts/typicons/src/font/typicons.css">
    <link rel="stylesheet" href="../assets/vendors/iconfonts/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../assets/vendors/css/vendor.bundle.addons.css">
    <script src="http://libs.baidu.com/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.js"></script>
    <link rel="stylesheet" href="../assets/css/shared/style.css">
    <link rel="stylesheet" href="../assets/css/demo_1/style.css">
    <link rel="shortcut icon" href="../assets/images/favicon.png" />
    <style>
        .hid {
            display: none;
        }

        .shide, .whide, .ehide {
            display: none;
        }
        #toast-container > .toast-info {
  background-image: url("data:image/png;base64,") !important;
}
#toast-container > .toast-error {
  background-image: url("data:image/png;base64,") !important;
}
#toast-container > .toast-success {
  background-image: url("data:image/png;base64,") !important;
}
#toast-container > .toast-warning {
  background-image: url("data:image/png;base64,") !important;
}
#toast-container.toast-top-full-width > div,
#toast-container.toast-bottom-full-width > div {
  width: 96%;
  margin: auto;
}
.toast {
  background-color: #030303;
}
.toast-success {
  background-color: #51a351;
}
.toast-error {
  background-color: #bd362f;
}
.toast-info {
  background-color: #2f96b4;
}
.toast-warning {
  background-color: #f89406;
}
    </style>
    <script>
    $(function () {
        if ($(".shide").text() != "")
            toastr.success('温馨提示', $(".shide").text())
        else if ($(".ehide").text() != "") {
            toastr.error('温馨提示', $(".ehide").text())
        } 

    })
    </script>
</head>
<body>
    <span class="shide">@TempData["success"]</span>
    <span class="ehide">@TempData["error"]</span>
    <div class="container-scroller">
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
                <a class="navbar-brand brand-logo" href="index.html">
                    <img src="../assets/images/logo.svg" alt="logo" />
                </a>
                <a class="navbar-brand brand-logo-mini" href="index.html">
                    <img src="../assets/images/logo-mini.svg" alt="logo" />
                </a>
            </div>
        </nav>
        <div class="container-fluid page-body-wrapper">
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        @Html.Action("Summary", "Admin")
                    </li>
                    <li class="nav-item nav-category">Main Menu</li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/BookIndex">
                            <i class="menu-icon typcn typcn-document-text"></i>
                            <span class="menu-title">Book Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/CategoryIndex">
                            <i class="menu-icon typcn typcn-shopping-bag"></i>
                            <span class="menu-title">Classification Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/ReaderIndex">
                            <i class="menu-icon typcn typcn-th-large-outline"></i>
                            <span class="menu-title">Reader Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/BorrowStatistics">
                            <i class="menu-icon typcn typcn-bell"></i>
                            <span class="menu-title">borrow Statistics</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/FineStatistics">
                            <i class="menu-icon typcn typcn-user-outline"></i>
                            <span class="menu-title">Fine Statistics</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/BorrowAnalysis">
                            <i class="menu-icon typcn typcn-document-add"></i>
                            <span class="menu-title">Borrow Analysis</span>
                        </a>
                        
                    </li>
                </ul>
            </nav>
            <div class="main-panel">
                @RenderBody()
            </div>
        </div>
    </div>
    @*<script src="../assets/vendors/js/vendor.bundle.base.js"></script>*@
    @*<script src="../assets/vendors/js/vendor.bundle.addons.js"></script>*@
    @*<script src="../assets/js/shared/off-canvas.js"></script>*@
    @*<script src="../assets/js/shared/misc.js"></script>*@
    <script src="~/js/iziModal.min.js" type="text/javascript"></script>
    <script src="../assets/js/demo_1/dashboard.js"></script>
</body>
</html>
